{%- extends "base.html.jinja" %}
{%- block title %}{{ title }}{%- endblock %}
{%- block content %}
<div class="row h-100">
    <div id="content" class="col-sm-9 h-100">
        <div class="page-banner">
            {{ pagination.total|commafy }}
            {%- if query is defined %}
            <span class="slug">
                results for <q id="search-name"><a href="{{ url_for('search', q=query|urlencode) }}">{{ query }}</a></q>
                <a class="search-again" href="{{ url_for('search') }}">/ search again</a>
            </span>
            {%- elif iso is defined %}
            <span class="slug">results for "{{ iso|upper }}"</span>
            {%- elif nearby_name is defined %}
            <span class="slug">
                places near {{ nearby_name }}
            </span>
            {%- elif nearby_lat is defined and nearby_lng is defined %}
            <span class="slug">
                places near me
            </span>
            {%- elif nullisland is defined %}
            <span class="slug">
                places visiting Null Island
            </span>
            {%- elif placetype %}
            <span class="slug">
                results for placetypes that are {{ placetype.name | anyfy | lower }} 
            </span>
            {%- endif %}
        </div>
        <div id="search-results">
            {%- if not placetype and facets %}
            <div id="search-facets">
                {%- if facets.placetypes.buckets %}
                <div class="slug facets">filter by placetype:</div>
                <ul>
                {%- for facet in facets.placetypes.buckets %}
                    {%- if query is defined %}
                    <li>{{ facet.doc_count|commafy }} <a href="{{ url_for('search', q=query|urlencode, placetype=facet.key|lower) }}">{{ facet.key|lower|pluralise(facet.doc_count) }}</a></li>
                    {%- elif iso is defined %}
                    <li>{{ facet.doc_count|commafy }} <a href="{{ url_for('country', iso=iso, placetype=facet.key|lower) }}">{{ facet.key|lower|pluralise(facet.doc_count) }}</a></li>
                    {%- elif nearby_lat is defined  and nearby_lng is defined %}
                    <li>{{ facet.doc_count|commafy }} <a href="{{ url_for('nearby', lat=nearby_lat, lng=nearby_lng, placetype=facet.key|lower) }}">{{ facet.key|lower|pluralise(facet.doc_count) }}</a></li>
                    {%- elif nearby_id is defined %}
                    <li>{{ facet.doc_count|commafy }} <a href="{{ url_for('nearby_id', id=nearby_id, placetype=facet.key|lower) }}">{{ facet.key|lower|pluralise(facet.doc_count) }}</a></li>
                    {%- elif nullisland is defined %}
                    <li>{{ facet.doc_count|commafy }} <a href="{{ url_for('nullisland', placetype=facet.key|lower) }}">{{ facet.key|lower|pluralise(facet.doc_count) }}</a></li>
                    {%- endif %}
                {%- endfor %}
                </ul>
                {%- endif %}
            </div>
            {%- endif %}
            {%- if results %}
            <ol id="query_results" start="{{ pagination.start }}">
            {%- for doc in results %}
                <li>
                    <a href="{{ url_for('info', id=doc['woe:id']) }}">{{ doc['woe:name'] }}</a>
                    <div class="slug">{{ doc['inflated']['name'] }} ({{ doc['woe:placetype_name'] }})</div>
                </li>
            {%- endfor %}
            </ol>
            <p class="again">Search again including <a href="{{ url_for('countries', include=['deprecated']) }} ">deprecated places</a>, <a href="{{ url_for('countries', include=['unknown']) }} ">unknown places</a>, places that <a href="{{ url_for('countries', include=['nullisland']) }} ">visit Null Island</a> or <a href="{{ url_for('countries', include=['deprecated','unknown','nullisland']) }} ">everything</a>?</p>
            {%- include "pagination.html.jinja" %}
            {%- else %}
            <p>&#x1F622;; nothing found ...</p>
            {%- endif %}
        </div>
        {%- include "includes/sidebar-info.html.jinja" %}
        {%- include "includes/search-query.html.jinja" %}
		{%- include "includes/footer.html.jinja" %}
    </div>
	{%- include "includes/sidebar.html.jinja" %}
</div>
{%- endblock %}